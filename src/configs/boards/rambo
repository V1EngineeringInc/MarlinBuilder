opt_set MOTHERBOARD "BOARD_RAMBO"
opt_set DEFAULT_AXIS_STEPS_PER_UNIT "{ 100, 100, 400, 100 }"
opt_set DIGIPOT_MOTOR_CURRENT "{ 138, 138, 138, 138, 138 }"

opt_enable \
    REVERSE_ENCODER_DIRECTION

pushd Marlin/src/HAL
