opt_set MOTHERBOARD "BOARD_ARCHIM1"

opt_set SERIAL_PORT "-1"

opt_set SPI_SPEED "SPI_HALF_SPEED"

opt_set MICROSTEP_MODES "{ 32, 32, 32, 32, 32, 32 }"

opt_set PWM_MOTOR_CURRENT "{ 1125, 1125, 1125 }"

opt_set DEFAULT_AXIS_STEPS_PER_UNIT "{ 200, 200, 800, 200 }"

opt_enable \
MICROSTEP32

# Write some useful tidbits to the readme.
echo "- Configured for Archim1" >> README.md
