opt_set EXTRUDERS 1
opt_set TEMP_SENSOR_0 999
opt_set DUMMY_THERMISTOR_999_VALUE 170
opt_set X_MIN_ENDSTOP_INVERTING "false"
opt_set Y_MIN_ENDSTOP_INVERTING "false"

opt_disable \
    MIN_SOFTWARE_ENDSTOPS \
    SOFT_ENDSTOPS_MENU_ITEM \
    USE_XMAX_PLUG \
    USE_YMAX_PLUG \
    X_DUAL_STEPPER_DRIVERS \
    X_DUAL_ENDSTOPS \
    Y_DUAL_STEPPER_DRIVERS \
    Y_DUAL_ENDSTOPS

echo "- Configured for Single Driver XYZ" >> README.md
