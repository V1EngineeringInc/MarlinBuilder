
opt_set NOZZLE_PARK_POINT "{ (X_MIN_POS + 10), (Y_MIN_POS + 10), 15 }"
opt_set NOZZLE_PARK_XY_FEEDRATE "60"
opt_set PAUSE_PARK_RETRACT_FEEDRATE "24"
opt_set FILAMENT_CHANGE_UNLOAD_FEEDRATE "24"
opt_set FILAMENT_CHANGE_UNLOAD_LENGTH "40"
opt_set FILAMENT_CHANGE_SLOW_LOAD_LENGTH "30"
opt_set ADVANCED_PAUSE_PURGE_LENGTH "15"
opt_set ADVANCED_PAUSE_RESUME_PRIME "1"
opt_set PAUSE_PARK_NOZZLE_TIMEOUT "240"


opt_enable \
    NOZZLE_PARK_FEATURE \
    ADVANCED_PAUSE_FEATURE \
    ADVANCED_PAUSE_CONTINUOUS_PURGE \
    PARK_HEAD_ON_PAUSE

echo "- Configured to Auto Filament Change" >> README.md
